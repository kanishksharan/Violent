# Threads

import thread
import time

def worker_thread(id):
    print ("thread id % is now alive "%(id))
    count = 1
    while True:
            print ("Thread with  ID %d  has counter value %d"%(id,count))
            time.sleep(2)
            count+=1

for i in range(5):
    thread.start_new_thread(worker_thread,(i,))

print ("the main thread is going for an infinite loop")
